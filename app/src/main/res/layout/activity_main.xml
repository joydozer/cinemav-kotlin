<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/semibold"
        android:text="Top Rated Movies"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/carouselView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="140dp"
        android:fontFamily="@font/semibold"
        android:text="See All"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:layout_below="@id/carouselView"
        android:layout_toRightOf="@id/textView3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:layout_marginLeft="157dp"
        android:text="See All"
        android:textColor="@color/yellow"
        android:layout_toRightOf="@id/textView8"
        android:layout_below="@id/carouselView2"
        android:layout_marginTop="28dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/semibold"
        android:text="Popular Movies"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/carouselView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Let's relax and watch a movie."
        android:layout_marginTop="10dp"
        android:layout_below="@id/welcome_text"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_bias="0.093" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regularinter"
        android:text="Welcome to CinemaV!"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Discover Movie"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/editTextText" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_below="@id/textView"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:background="@drawable/search_style"
        android:ems="10"
        android:focusable="false"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/regularinter"
        android:hint="Search movie, genre..."
        android:drawableLeft="@drawable/magnifying_glass"
        android:drawablePadding="14dp"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:layout_marginTop="40dp"
        app:fillColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:radius="6dp"
        app:slideInterval="5000" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:fillColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:radius="6dp"
        app:slideInterval="5000" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView3"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:fillColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:radius="6dp"
        app:slideInterval="5000"
        android:layout_marginBottom="50dp"/>


</RelativeLayout>
</ScrollView>